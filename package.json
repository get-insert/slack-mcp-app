{
  "name": "@get-insert/slack-mcp-server",
  "version": "0.0.4",
  "description": "A Slack MCP server workspace",
  "type": "module",
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "dev:server": "MCP_SERVER_PORT=3001 node --import ./ts-node-loader.js workspaces/mcp-server/index.ts",
    "dev:client": "MCP_CLIENT_PORT=3002 node --import ./ts-node-loader.js workspaces/mcp-client/index.ts",
    "build": "npm run build:clean && npm run build:server && npm run build:client",
    "build:clean": "shx rm -rf dist",
    "build:server": "cd workspaces/mcp-server && tsc -p tsconfig.json && shx chmod +x ../../dist/mcp-server/**/*.js",
    "build:client": "cd workspaces/mcp-client && tsc -p tsconfig.json && shx chmod +x ../../dist/mcp-client/**/*.js",
    "start:server": "MCP_SERVER_PORT=3001 node dist/mcp-server/index.js",
    "start:client": "MCP_CLIENT_PORT=3002 node dist/mcp-client/index.js",
    "test": "echo \"No tests yet\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"workspaces/**/*.ts\"",
    "lint:prettier": "prettier --check \"workspaces/**/*.ts\"",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint \"workspaces/**/*.ts\" --fix",
    "fix:prettier": "prettier --write \"workspaces/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "local:db:start": "docker-compose up -d dynamodb-local",
    "local:db:stop": "docker-compose stop dynamodb-local",
    "local:db:setup": "node scripts/setup-local-environment.mjs",
    "local:setup": "npm run local:db:start && sleep 3 && npm run local:db:setup"
  },
  "keywords": [
    "mcp",
    "slack",
    "workspace"
  ],
  "author": "Ubie, Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/get-insert/slack-mcp-app.git"
  },
  "homepage": "https://github.com/get-insert/slack-mcp-app",
  "bugs": {
    "url": "https://github.com/get-insert/slack-mcp-app/issues"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.0.0",
    "prettier": "^3.2.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.29.1"
  }
}
